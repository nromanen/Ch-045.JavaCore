<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation=
            "http://java.sun.com/xml/ns/javaee
            http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Students database</display-name>

    <servlet>
        <servlet-name>MainFrameServlet</servlet-name>
        <servlet-class>students.web.MainFrameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentFrameServlet</servlet-name>
        <servlet-class>students.web.StudentFrameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MentorFrameServlet</servlet-name>
        <servlet-class>students.web.MentorFrameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MentorsFrameServlet</servlet-name>
        <servlet-class>students.web.MentorsFrameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupsFrameServlet</servlet-name>
        <servlet-class>students.web.GroupsFrameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupFrameServlet</servlet-name>
        <servlet-class>students.web.GroupFrameServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>MainFrameServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentFrameServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MentorFrameServlet</servlet-name>
        <url-pattern>/edit_mentor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MentorsFrameServlet</servlet-name>
        <url-pattern>/mentors</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupsFrameServlet</servlet-name>
        <url-pattern>/groups</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupFrameServlet</servlet-name>
        <url-pattern>/edit_group</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/StudentsDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <!--if run web app main first now-->
   <!-- <welcome-file-list>
        <welcome-file>main</welcome-file>
    </welcome-file-list>-->

</web-app>
